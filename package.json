{
  "name": "ts-card-games",
  "version": "0.3.0",
  "description": "Hearts, Pinochle and other games in typescript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json --verbose",
    "build": "rm -rf lib/ && tsc",
    "prepare": "npm run compile",
    "prepublishOnly": "npm test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "posttest": "npm run fix && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreasmwenzel/ts-card-games.git"
  },
  "bugs": {
    "url": "https://github.com/andreasmwenzel/ts-card-games/issues"
  },
  "homepage": "https://github.com/andreasmwenzel/ts-card-games#readme",
  "author": "Andreas Wenzel",
  "license": "ISC",
  "dependencies": {
    "ts-cards": "^1.0.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^14.11.2",
    "@types/seedrandom": "^2.4.28",
    "@types/uuid": "^8.3.0",
    "gts": "^3.1.0",
    "jest": "^27.3.1",
    "seedrandom": "^3.0.5",
    "ts-jest": "^27.0.7",
    "typescript": "^4.0.3"
  }
}
